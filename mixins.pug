//- TOPBANNER
		Contains 3 pieces of picture to get
		best perfomance in supported mail clients
		======
		==||==

mixin startBanner(props)

	-
		// Declare default values
		props = props || {};
		props.topLink = props.topLink || site;
		props.leftWidth = props.leftWidth|| '50%';
		props.rightWidth = props.rightWidth || '50%';

		props.top = props.top || '';
		props.left = props.left || '';
		props.right = props.right || '';

	if topBanner
		+tb
			tr
				td.fluid(style="border-top: 6px solid #{borderColor};")
					+tb({'class': 'banner-top'})
						tr
							td(align="center")
								+a({href: topLink})
									img(src="#{props.top}" width="100%" alt="")
			tr
				td.fluid
					+tb({'class': 'banner-top'})
						tr
							td(align="right" valign="top" width=leftWidth)
								+a()
									img(src="#{props.left}", alt="FBS")
							td.top-banner__btn(align="left" valign="top" width=rightWidth)
								+a()
									img(src="#{props.right}", alt="Personal Area")

//- HR
		Divides content blocks

mixin hr(prop_item)
	+tb({'class': 'hr'})
		tr
			td: div &nbsp;

//- BANNER
		Simple adaptive by default one image block
mixin banner(props)
	-
		props = props || {};
		props.width = props.width || '100%';
		props.link = '' || '';
		props.src = '' || '';
		props.style = props.style || 'padding-bottom: 0;'

	tr
		td.fluid(align="center" valign="top")
			+a({href: props.link})
				img(src=props.src style=props.style)

//- OL
		Ordered list (max 3)
mixin ol(data)
	tr
		td
			+tb({'class': 'ol'})
				each item, number in data
					tr
						td.ol__counter(width="34" align="center" valign="top")
							case number
								when 0
									img(src="http://multimedia.email.fbs.com/fbs/1/1/photos/3798.png" alt="1")
								when 1
									img(src="http://multimedia.email.fbs.com/fbs/1/1/photos/3799.png" alt="2" width="17" height="23")
								when 2
									img(src="http://multimedia.email.fbs.com/fbs/1/1/photos/3797.png" alt="3" width="17" height="23")
						td.text(valign="middle"): div !{item}

