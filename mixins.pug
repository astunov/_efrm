//- ELEMENTS

//- Table tag
mixin tb(attr)
	-
		attr = attr || {}
		attr.width = attr.width || '100%';
		attr.align = attr.align || 'center';
		if (RTL) { attr.dir = 'rtl'};

	table(cellpadding="0" cellspacing="0" border="0")&attributes(attr)
		block

//- Link tag
mixin a(attr)
	- attr = attr || {}
	a(target="_blank")&attributes(attr)
		block

//- TYPO

mixin h1(prop_item, props)
	-
		props = props || {}
		props.class = props.class || "h1"
	tr
		td&attributes(props): div
			block

mixin h2(prop_item, props)
	-
		props = props || {};
		props.class = props.class || "h2";
		props.align = props.align || ((prop_item.rtl) ? 'right' : 'left');
	tr
		td&attributes(props): div
			block

mixin text(prop_item, props)
	-
		props = props || {};
		props.class = props.class || 'text';
	tr
		td&attributes(props): div
			block

mixin btn(props, styleWrapper, styleButton)
	-
		styleWrapper = styleWrapper || {};
		styleWrapper.style	= styleWrapper.style || "padding-bottom:20px;";
		styleWrapper.align = styleWrapper.align	|| "center";

		styleButton = styleButton || {};
		styleButton.style = styleButton.style || "margin:auto;";
		styleButton.align = styleButton.align || "center";
	tr
		td.btn__wrapper&attributes(style)
			table.button&attributes(styleButton)
				tr
					td.btn__inner(valign="middle" align="center"): div
						+a({
							href: props.link,
							title: props.title,
							'class': 'btn__link'
						})
							span!= props.title


